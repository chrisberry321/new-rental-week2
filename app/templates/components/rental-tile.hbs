<li>{{rental.owner}}'s {{rental.type}} in {{rental.city}}
<!-- isImageShowing = false (in rental-tile.js), if true then will show info
 imageShow, imageHide defined in rental-tile.js-->
  {{#if isImageShowing}}
    <p>
      <img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}/>
    </p>
    {{else}}
      <button {{action 'imageShow'}}>Show image</button>
    {{/if}}
    {{update-rental rental=rental update="update"}}
    <button {{action 'delete' rental}}>Delete</button>
</li>
